﻿@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="For students, by students. See a visual representation of your degree as you design it.">
    <meta name="author" content="">
    <link rel="icon" href="~/Content/images/logo.png">

    <title>My Uni Planner</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/Content/custom-animations.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>
    <div id="h">
        <div class="container">
            <div class="row">
                <a href="@Url.Action("Index", "MainMenu")"><button class="btn btn-lg btn-info btn-register">Design Your Degree</button></a>
                <div class="col-md-10 col-md-offset-1 mt">
                    <h3>We know the struggle of university students</h3>
                    <h1 class="mb" style="text-transform:uppercase;">My Uni Planner</h1>
                </div>
                <div class="col-md-12 mt hidden-xs">
                    <iframe width="80%" height="60%" class="img-responsive aligncenter" alt="" data-effect="slide-bottom" src="https://www.youtube.com/embed/lHcY-LELjqo?rel=0&amp;controls=0" frameborder="0" gesture="media" allowfullscreen></iframe>
                </div>
            </div>
        </div>
    </div>
    <div id="w">
        <div class="row nopadding">
            <div class="col-md-5 col-md-offset-1 mt">
                <h4>For Students, By Students</h4>
                <p>We are a group of students who have lived and experienced the hassles of planning our ever changing degrees.</p>
                <p>See a visual representation of your degree as you design it.</p>
                <p></p>
                <p class="mot"><a href="@Url.Action("Index", "MainMenu")"><button class="btn btn-info btn-theme">Get Structured Now</button></a></p>
            </div>

            <div class="col-md-6 pull-right">
                <iframe width="80%" height="60%" class="img-responsive alignright" data-effect="slide-right" src="https://www.youtube.com/embed/_H0hKXOpCbo?rel=0&amp;controls=0" frameborder="0" gesture="media" allowfullscreen></iframe>
            </div>
        </div>
    </div>
    <div id="picton">
        <div class="row nopadding">
            <div class="col-md-6 pull-left">
                <img src="~/Content/images/screenshotmajorproject.png" class="img-responsive alignleft" alt="" data-effect="slide-left">
            </div>
            <div class="col-md-5 mt">
                <h4>Straight Forward</h4>
                <p>A new straight forward way to visualise your degree structure.</p>
                <p>Gone are the days of hassling your program coordinator to make sure you're doing the prerequisits.</p>
                <p></p>
                <p class="mt"><a href="@Url.Action("Index", "MainMenu")"><button class="btn btn-info btn-theme">GET STRUCTURED NOW</button></a></p>
            </div>

        </div>
    </div>



</body>
</html>
<footer>
    <div id="c">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3 centered">
                    <p>2017 My Uni Planner Team</p>
                </div>
            </div>
        </div>
    </div>
