    <script src="~/Scripts/jquery-email.js"></script>
    <script type="text/javascript">
        // Sets up the grid
        $(function () {
            //sets grid width depending on how many items to be displayed
            var planWidth = 2 * $("#oldNumOfSubjects").val() * 103;

            // Set the width attribute of the class innerPlan to planWidth; 
            $("#innerPlan").css("width", planWidth);

            //whole box that contains grid and year/column headings, set height depending on num of years in degree
            var planHeight = $("#unitsPerDegree").val() / 80 * 107 + 30;
            $("#plan").css("height", planHeight);

            $(".semesterBox").css("width", planWidth / 2 + 3);

            // jQuery plugin which can arrange a collection of elements into a grid while also providing drag and drop functionality.
            $('#innerPlan').shapeshift({
                gutterX: 5,
            });

            //set initial values
            var courseText = "";
            // For each course box
            $(".courseBox").each(function () {
                // Determining the index at runtime of each particular div tag. 
                // Used if a drop operation fails the div tag can return to its previous position in the
                // parent element (#innerPlan);
                $(this).attr("data-previousIndex", $("#innerPlan").find($(this)).index());
                courseText = courseText + $(this).text() + ",";
            });
            $("#courseInput").val(courseText);
                
            //tabbed menu
            $(function () {
                $("#tabs").tabs({ heightStyle: "fill", });
            });
        });
    </script>
    <script>

        //every time a box is dropped and dragged, loop through all the boxes and reset the value of the hidden field that stores the
        //html values of all the boxes. when submit button is clicked, that value is sent through to the plancontroller.
        $("#innerPlan").on("ss-rearranged", function (e, selected) {
            if ($(selected).html().length == 8 && $(selected).html().localeCompare("Elective") != 0) {
                isRunning($(selected).index(), $(selected).attr('data-previousIndex'), $(selected).html());                
            }
            //if haschild of the iconRefresh, they can also be reset
            else if ($(selected).html().substring(8).localeCompare('<div class="ui-icon ui-icon-refresh iconRefresh"></div>') == 0) {
                isRunning($(selected).index(), $(selected).attr('data-previousIndex'), $(selected).html().substring(0,8));   
            }
     
            var courseText = "";
            $(".courseBox").each(function () {
                $(this).attr("data-previousIndex", $("#innerPlan").find($(this)).index());
                courseText = courseText + $(this).text() + ",";
            });
            $("#courseInput").val(courseText);
        });

        var count;
        function isRunning(index, previousIndex, courseCode) {
            var semester = 1;
            var subjects = $("#newNumOfSubjects").val();
            if ((index > (subjects - 1) && index <= ((subjects * 2) - 1))
                || (index > ((subjects * 3) - 1) && index <= ((subjects * 4) - 1))
                || (index > ((subjects * 5) - 1) && index <= ((subjects * 6) - 1))
                || (index > ((subjects * 7) - 1) && index <= ((subjects * 8) - 1))
                || (index > ((subjects * 9) - 1) && index <= ((subjects * 10) - 1))
                || (index > ((subjects * 11) - 1) && index <= ((subjects * 12) - 1))
            ) {
                semester = 2;
            }
            $.when(requests(index, previousIndex, semester, courseCode));
            
            // Once the year has been implemented it the boolean will be changed to count === 1. 
            return count != 1;
        }
        //
        function requests(index, previousIndex, semester, courseCode) {
            $.ajax({
                url: "/Plan/isRunningInSemester",
                cache: false,
                type: "POST",
                data: { semesterID: semester, courseCode: courseCode },
                success: function (data) {
                    count = data.iCount;
                    if (count == 0) {    

                        //display a message to the user informing them they cannot move a course there                        
                        alert(courseCode + " does not run in semester " + semester + ".\nYour selection will be reversed");

                        //get whether index or previousindex is higher - the difference between dragging a box with a higher index to a lower position, and a box with a lower
                        //index to a higher position - the difference between these two creates different situations
                        var highest = 0;
                        var lowest = 0;
                        if (index > previousIndex){
                            highest = index;
                            lowest = previousIndex;
                        }
                        else {
                            highest = previousIndex;
                            lowest = index;
                        }
                         
                        //if a course is being dragged from a lower position index to a higher one
                        if (highest == index) {
                            doSwap(index, previousIndex, true);
                        }
                        else {

                            doSwap(previousIndex, index, false);
                            
                        }       
                    }
                },
                error: function () {
                    alert("Could not request the required information for that course");
                }
            });
        }

        function doSwap(highest, lowest, forward) {
            var tempBoxes = [];

            //store the boxes in an array as objects
            for (i = lowest; i <= highest; i++) {
                tempBoxes[i] = $("#innerPlan").children().eq(i);
            }

            var attrToReplace = ["class", "data-original", "data-originalclass", "data-semester", "data-i", "rule", "directedoptions"];

            //temp data for swap
            var tempHtml;
            var tempAttributes = [];

            //get the temp data for the first swap
            if (forward){
                tempHtml = tempBoxes[highest].html();
                for (i = 0; i < attrToReplace.length; i++) {
                    var attr = tempBoxes[highest].attr(attrToReplace[i]);
                    if (typeof attr !== typeof undefined && attr !== false) {
                        tempAttributes[i] = attr;
                    }
                    else {
                        tempAttributes[i] = ""; //doesnt exist
                    }
                }
            }
            else {
                tempHtml = tempBoxes[lowest].html();
                for (i = 0; i < attrToReplace.length; i++) {
                    var attr = tempBoxes[lowest].attr(attrToReplace[i]);
                    if (typeof attr !== typeof undefined && attr !== false) {
                        tempAttributes[i] = attr;
                    }
                    else {
                        tempAttributes[i] = ""; //doesnt exist
                    }
                } 
            }
            
            if (forward){
                //loop through each array element and swap back to the correct courseBox
                for (i = highest; i > lowest; i--) {
                    var thisBox = $("#innerPlan").children().eq(i); //get the needed box
                    thisBox.html(tempBoxes[i - 1].html());          //swap from html of box next to this box

                    for (y = 0; y < attrToReplace.length; y++) {    //get back the needed attributes
                        var attr = tempBoxes[i - 1].attr(attrToReplace[y]);
                        if (typeof attr !== typeof undefined && attr !== false) {
                            thisBox.attr(attrToReplace[y], attr);
                        }
                        else {
                            thisBox.removeAttr(attrToReplace[y]);   //if the box doesn't have this attribute, then delete it as the past box may have had data stored there
                        }

                    }
                }
            }
            else {
                //loop through each array element and swap back to the correct courseBox
                for (i = lowest; i < highest; i++) {
                    var thisBox = $("#innerPlan").children().eq(i); //get the needed box
                    thisBox.html(tempBoxes[i + 1].html());          //swap from html of box next to this box

                    for (y = 0; y < attrToReplace.length; y++) {    //get back the needed attributes
                        var attr = tempBoxes[i + 1].attr(attrToReplace[y]);
                        if (typeof attr !== typeof undefined && attr !== false) {
                            thisBox.attr(attrToReplace[y], attr);
                        }
                        else {
                            thisBox.removeAttr(attrToReplace[y]);
                        }

                    }
                }
            }           

            
            //do temp swap part
            var tempBox;
            if (forward){
                tempBox = $("#innerPlan").children().eq(lowest);
            }
            else {
                tempBox = $("#innerPlan").children().eq(highest);
            }
            
            tempBox.html(tempHtml);

            for (y = 0; y < attrToReplace.length; y++) {
                if (tempAttributes[y].localeCompare("") != 0) { //if this box has the required attribute, swap it back else delete it
                    tempBox.attr(attrToReplace[y], tempAttributes[y]);
                }
                else {
                    tempBox.removeAttr(attrToReplace[y])
                }
            } 
        }        
    </script>


    <script>
        //drag and drop electives/directeds
        $(function () {
            $(".droppable").droppable({
                accept: ".draggable",
                drop: function (event, ui) {                   

                    //ensure the course isn't already in the plan
                    if (courseAlreadyInPlan($(ui.draggable).text())) {
                        if (confirm("That course is already in your plan, are you sure you want to add it again?")) {   //only allow duplicate if user says it's ok
                            var parent = $(this).parent();
                            checkIsRunnng(parent.children().index($(this)), $(ui.draggable).text(), $(ui.draggable));
                        }
                    }
                    else {
                        var parent = $(this).parent();
                        checkIsRunnng(parent.children().index($(this)), $(ui.draggable).text(), $(ui.draggable));
                    }  
                }
            });
        });



        // Generates a list of classes (as strings) that will need to be updated when the user has dropped
        // particular courses in particular grid spots.
        function determineClasses(ui) {
            var strClasses = [];
            //if course dragged is an elective, set target box to green (as it will be the last element in the array);
            if (ui.hasClass("electives")) {
                strClasses = ["majorCourse", "potentialElective", "degreeCore", "majorCore", "majorslot", "electiveCourse"];
            }
            else {
                //else course dragged is a directed, so set target box to blue (as it will be the last element in the array);
                strClasses = ["electiveCourse", "potentialElective", "degreeCore", "majorCore", "majorslot", "majorCourse"];
            }
            return strClasses;
        }

        // Function to change the background colour of a (div).
        function addBackgroundColour(selector, classes) {
            // Changing the background colour  of the (divs) displaying course information. 
            // The last str in classes will have the class that is added not removed
            for (var i = 0; i < classes.length - 1; i++) {
                $(selector).removeClass(classes[i]);
            }
            // The last str in the array list will be the added class
            $(selector).addClass(classes[classes.length - 1]);
        }

        //returns true if the passed courseCode already exists in the plan
        function courseAlreadyInPlan(courseCode) {

            var planData = $("#courseInput").val();

            //loop through every value in courseInout
            while (planData.length > 0) {
                var endPos = planData.indexOf(','); //delimited by commas
                var tempCode = planData.substring(0, endPos); //get next code
                if (tempCode.localeCompare(courseCode) == 0) {  //if this value equals the passed courseCode, that code exists in the plan already, inform the user                    
                    return true;
                }
                planData = planData.substring(endPos + 1);
            }
            return false;
        }

        var count2;
        function checkIsRunnng(index, courseCode, dragged) {
            var semester = 1;
            if ((index > 3 && index <= 7) || (index > 11 && index <= 15) || (index > 19 && index <= 23)) {
                semester = 2;
            }
            $.when(requests2(index, semester, courseCode, dragged));

            // Once the year has been implemented it the boolean will be changed to count === 1. 
            return count2 != 1;
        }
        
        function requests2(index, semester, courseCode, dragged) {
            $.ajax({
                url: "/Plan/isRunningInSemester",
                cache: false,
                type: "POST",
                data: { semesterID: semester, courseCode: courseCode },
                success: function (data) {
                    count2 = data.iCount;
                    if (count2 == 0) {
                        alert("That course doesn't run in that semester");
                    }
                    else {
                        var thisBox = $("#innerPlan").children().eq(index);

                        var approval = true;
                        //must stay as seperate if statement series
                        //if box that is being dragged onto is a degree core, let user know that is a bad idea, block them if they want to
                        if (thisBox.hasClass("degreeCore")) {
                            if (!confirm("You are about to override a core course for your degree. We only recommend this if you have recognition of prior learning for this course. Do you wish to continue?")) {
                                approval = false;
                            }
                        }
                        //if box that is being dragged onto is a major core, let user know that is a bad idea, block them if they want to
                        else if (thisBox.hasClass("majorCore")) {
                            if (!confirm("You are about to override a core course for your major. We only recommend this if you have recognition of prior learning for this course. Do you wish to continue?")) {
                                approval = false;
                            }
                        }
                        //if box is a majorslot, check if there's a rule behind it and if the rule is being disobeyed, block transaction
                        else if (thisBox.hasClass("majorslot")) {
                            if (thisBox.attr("rule").localeCompare("Any") == 0) {
                                //the rule is any, so allow any directed course and block others
                                if (!dragged.hasClass('directeds')) {
                                    alert("That slot requires a directed course from the directed menu");
                                    approval = false;
                                }
                            }
                            else {
                                //If this gridbox's attribute called 'rule' is merely a year level, we get the first char of it and compare it to the year level of the course that is being dragged 
                                //onto this gridbox. If they match, the course matches this box's rule and we can continue. Else deny it.
                                var courseYearLevel = dragged.text().substring(4, 5);
                                if (!thisBox.attr("rule").substring(0, 1).localeCompare(courseYearLevel) == 0 || !dragged.hasClass('directeds')) {
                                    alert("That slot requires a " + thisBox.attr("rule") + " level course from the directed menu");
                                    approval = false;
                                }
                            }


                        }

                        if (approval) {
                            //otherwise continue on with the drop and drag
                            thisBox.html(dragged.text() + "<div class='ui-icon ui-icon-refresh iconRefresh'></div>");

                            // Determine what classes needs their backgrounds updated.
                            var classes = determineClasses(dragged);

                            // Update the background of the classes. 
                            addBackgroundColour(thisBox, classes);

                            //update courseText
                            var courseText = "";
                            $(".courseBox").each(function () {
                                courseText = courseText + thisBox.text() + ",";
                            });
                            $("#courseInput").val(courseText);
                        }
                        else {
                            approval = true;
                        }
                    }
                },
                error: function () {
                    alert("Could not request the required information for that course");
                }
            });
        }
    </script>

    <script>
        //on click to change number of subjects per semester
        $("#btnNewNumOfSubjects").click(function () {

            var oldNumber = $("#oldNumOfSubjects").val();
            var newNumber = $("#newNumOfSubjects").val();
            var difference = newNumber - oldNumber;

            // Determines if the input from the user is different from the old number of subjects per semester
            // in the grid. If the difference is 0; then both the old number of subjects and input were the same and hence we do not 
            // need to update the grid. 
            if (difference != 0 && newNumber >= 2 && newNumber <= 5) {
                var planWidth = 2 * newNumber * 103;
                if (newNumber == 1 || newNumber == 2 || newNumber == 3) {
                    planWidth = planWidth + 11;
                }
                $("#innerPlan").css("width", planWidth);

                //new number of years the degree will now take
                var newYears = Math.ceil($("#unitsPerDegree").val() / (newNumber * 20));

                //new height of plan div
                var planHeight = newYears * 107 + 30;
                $("#plan").css("height", planHeight);

                //fill in extra or less years on the side column
                $(".yearNames").remove();
                for (var i = 1; i <= newYears; i++) {
                    $("#yearNameColumn").append(" <li class='yearNames'>Year " + i + "</li>");
                }

                //change position of semester name headings
                var semester1NameLeft;
                var semester2NameLeft;
                //depending on how many courses per semester, push the headings along a different amount
                switch (newNumber) {
                    case "1":
                        semester1NameLeft = -2;
                        semester2NameLeft = -87;
                        break;
                    case "2":
                        semester1NameLeft = 55;
                        semester2NameLeft = 70;
                        break;
                    case "3":
                        semester1NameLeft = 102;
                        semester2NameLeft = 217;
                        break;
                    case "4":
                        semester1NameLeft = 155;
                        semester2NameLeft = 365;
                        break;
                    case "5":
                        semester1NameLeft = 202;
                        semester2NameLeft = 520;
                        break;
                    default:
                        semester1NameLeft = 0;
                        semester2NameLeft = 0;

                }
                $("#semester1Name").css("left", semester1NameLeft);
                $("#semester2Name").css("left", semester2NameLeft);

                //semester background box colour divs
                $(".semesterBox").css("width", planWidth / 2 + 3);
                $("#semester2Box").css("left", planWidth / 2 - 12);

                $("#oldNumOfSubjects").val(newNumber);

                // jQuery plugin which can arrange a collection of elements into a grid while also providing drag and drop functionality.
                $('#innerPlan').shapeshift({
                    gutterX: 5,
                });
            }
        });
    </script>

    <script>
        //search box
        $(function () {
            var availableTags = @Html.Raw(Json.Encode(ViewBag.CourseCodeList));
            $("#searchBox").autocomplete({
                source: availableTags
            });
        });

        $("#searchBox").on("autocompleteselect", function (event, ui) {
            var courseSelected = "#" + ui.item.value;   //select the course we want
            $("#courseInput").val(courseSelected);

            //outside accordion - search for the one we want and open it (study are accordion)
            var studyArea = $(courseSelected).parent().parent(); //get the study area div
            //get the index of the study area div so that the accordion can use it
            var studyAreaIndex = $('#accordion .accordions').index(studyArea);
            $("#accordion").accordion("option", "active", studyAreaIndex); //activate study area accordion (outside accordion)
            //inner accordion, search for the one we want and open it (abbreviation accordion)
            //inner accordion
            var abbr = $(courseSelected).parent();
            var abbrSelector = studyArea.find(".subAccordion");
            var abbrIndex = abbrSelector.index(abbr);
            studyArea.accordion("option", "active", abbrIndex);

            //change colour of selected course for a couple of seconds just to make it more obvious
            var el = $(courseSelected),
                x = 2000,
                originalColor = el.css("background");

            el.css("background", "#F8DE5C");
            setTimeout(function () {
                el.css("background", originalColor);
            }, x);
        });
    </script>

